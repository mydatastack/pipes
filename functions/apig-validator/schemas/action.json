{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "https://pipesdata.com/schemas/action.json",
  "title": "Action Message Schema",
  "description": "Validation for the action message",
  "type": "object",
  "required": ["message_id", "received_at"],
  "properties": {
    "message_id": {"type": "string"},
    "received_at": {"type": "string", "format": "date-time"},
    "body": {
      "type": "object",
      "required": ["type", "event", "anonymous_id", "sent_at"],
      "properties": {
        "type": {"constant": "identity"},
        "platform": {"type": "string"},
        "anonymous_id": {"type": "string"},
        "user_id": {"type": "string"},
        "event": {"type": "string"},
        "properties": {
          "type": "object",
          "properties": {
            "category": {"type": "string"},
            "action": {"type": "string"},
            "label": {"type": "string"},
            "value": {"type": "number"}
          }
        }
      },
      "sent_at": {"type": "string", "format": "date-time"},
      "timestamp": {"type": "string", "format": "date-time"},
      "context": {"$ref": "context.json#/context"}
    }
  }
}
