{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "https://pipesdata.com/schemas/page.json",
  "title": "Page Message Schema",
  "description": "Validation for the page message",
  "type": "object",
  "required": ["message_id", "received_at"],
  "properties": {
    "message_id": {"type": "string"},
    "received_at": {"type": "string", "format": "date-time"},
    "body": {
      "type": "object",
      "required": ["type", "ananymous_id", "name", "sent_at"],
      "properties": {
        "type": {"constant": "page"},
        "platform": {"constant": "page"},
        "anonymous_id": {"type": "string"},
        "user_id": {"type": "string"},
        "name": {"type": "string"},
        "properties": {
          "type": "object",
          "properties": {
            "title": {"type": "string"},
            "url": {"type": "string"},
            "path": {"type": "string"},
            "referrer": {"type": "string"},
            "search": {"type": "string"},
            "keywords": {"type": "array", "items": {"type": "string"}}
          }
        },
        "sent_at": {"type": "string", "format": "date-time"},
        "timestamp": {"type": "string", "format": "date-time"},
        "context": {"$ref": "context.json#/context"}
      }
    }
  }
}
